   Enter one work title:<br>
  <input type="text" name="title">
  <br>
  
   Choose uploading a screenshot or a link:<br>
                <select id="mySelect" name="values">
                    <option>Link</option>
                    <option>Screenshot</option>
                    
                </select>
                </br>
   <div id="myDiv">Enter one link:<br>
  <input type="text" name="URL" id="link">
   </div>
  
   <div id="iDiv">
   Choose screenshot:<br>
   <input type="file" name="myimage1" id="im" />
   </div>
   </br>
  Optional profile picture:<br>
  <input type="file" name="myimage"  />
  <br><br>
  <input type="submit" value="Submit">
  <script>            
        var myDiv = document.getElementById("myDiv");            
        var iDiv = document.getElementById("iDiv");
        iDiv.style.display="none";
        document.getElementById("mySelect").onchange = function(){
        myDiv.style.display = (this.selectedIndex == 0) ? "block" : "none";
        iDiv.style.display = (this.selectedIndex == 0) ? "none" : "block";
        

}
    </script>
</form> 



